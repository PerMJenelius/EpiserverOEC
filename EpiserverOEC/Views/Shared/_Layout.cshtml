<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href='http://fonts.googleapis.com/css?family=Hammersmith+One|Merriweather+Sans:400,300,300italic,400italic,700,700italic' rel='stylesheet' type='text/css'>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="https://www.connection.se/"><img src="~/Models/Media/connection3.png" /></a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @Html.ActionLink("Hem", "Index", "en/start", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Om OEC", "Index", "en/about", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Sponsorer", "Index", "en/sponsors", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Auktionen", "Index", "en/auction", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Anmälan", "Index", "en/signup", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Nyheter", "Index", "en/news", new { area = "" }, new { @class = "navbar-brand" })
                </ul>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <footer>
        @{
            Html.RenderPartial("Footer");
        }
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>