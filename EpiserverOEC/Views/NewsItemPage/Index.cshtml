@model EpiserverOEC.Models.Pages.NewsItemPage

<div class="body-content">
    <div class="container text-center" style="margin-top:60px; padding:50px 0 30px 0">
        <div style="margin-bottom:50px">

            @if (Model.Heading != null)
            {
                <h1>
                    @Html.PropertyFor(x => x.Heading)
                </h1>
            }

            @if (Model.Image != null)
            {
                <div>
                    <img src="@Url.ContentUrl(Model.Image)" style="width:50%" />
                </div>
            }

            @if (Model.BodyText != null)
            {
                <p style="padding:15px; color:dimgray">
                    @Html.PropertyFor(x => x.BodyText)
                </p>
            }

        </div>

        <div style="margin:0 15% 50px 15%">
            <div class="text-center" style="background-color:white; color:dimgray; border:2px solid lightgray; padding:15px; margin-bottom:20px">
                
                @{ 
                    string date = Model.Created.Year.ToString();
                    date += '-';

                    if (Model.Created.Month < 10)
                    {
                        date += '0';
                    }

                    date += Model.Created.Month;
                    date += '-';

                    if (Model.Created.Day < 10)
                    {
                        date += '0';
                    }

                    date += Model.Created.Day;
                }
                
                <p>
                    @date
                </p>

            </div>

            <div class="text-center" style="background-color:white; border:2px solid lightgray; padding:15px; width:125px; margin:auto">
                <a href="~/en/news">
                    Alla nyheter
                </a>
            </div>

        </div>

    </div>
</div>

